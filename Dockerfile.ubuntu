FROM adoptopenjdk:11-jre-hotspot-focal

ENV TRACCAR_VERSION 5.8

WORKDIR /opt/traccar

# Download the tracker-server-all.jar from Azure Blob Storage
RUN wget -qO /opt/traccar/tracker-server.jar https://traccarinstallers1.blob.core.windows.net/traccar/tracker-server.jar

ENTRYPOINT ["java", "-Xms1g", "-Xmx1g", "-Djava.net.preferIPv4Stack=true"]

CMD ["-jar", "tracker-server-all.jar", "conf/traccar.xml"]






